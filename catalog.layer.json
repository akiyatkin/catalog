{
	"tpl":"*catalog/rubrics.tpl",
	"json":"*catalog/rubrics.php",
	"autoedittpl":{ "fast":"{infra.conf.catalog.dir}"},
	"configtpl":{
		"root":"{crumb}"
	},
	"child":[{
		"tpl":"*catalog/search.tpl",
		"jsontpl":"*catalog/search.php?type=search&val={crumb.name}&prod={config.sel}",
		"autoedittpl":{ "fast":"{infra.conf.catalog.dir}" },
		"conf_prod":true,
		"unick":"search",
		"parsedtpl":"{config.sel}",
		"configtpl":{
			"root":"{crumb.parent}",
			"sel":"{config.sel|crumb.name}"
		}
	},{
		"child":{
			"tpl":"*catalog/position.tpl",
			"autoedittpl":{ "fast":"*Каталог/{crumb.parent.name}/{crumb.name}/" },
			"jsontpl":"*catalog/catalog.php?type=pos&val={crumb.parent.name}&art={crumb.name}",
			"seotpl":{"link":"{crumb.parent.parent}/{{producer}}/{{article}}"},
			"seo":{
				"name":"Позиция каталога",
				"json":"*catalog/catalog.php?type=pos&val={producer}&art={article}",
				"tpl":["<h1>{pos.Производитель} {pos.Артикул}</h1>{pos.texts::t}{t:}{.}"],
				"schema":{
					"type":"object",
					"properties":{
						"producer":{
							"title":"Производитель",
							"type":"string",
							"required":true
						},
						"article":{
							"title":"Артикул",
							"type":"string",
							"required":true
						}
					}
					
				},
				"defitems":"*catalog/catalog.php?type=seo&val=pos"
			}
		}
	}],
	"childs":{
		"find":{
			"tpl":"*catalog/find.html",
			"autosavename":"catalog.search"
		},
		"change":{
			"tpl":"*catalog/search.tpl",
			"jsontpl":"*catalog/search.php?type=search&val={crumb.name}&prod={config.sel}",
			"autoedittpl":{ "fast":"{infra.conf.catalog.dir}" },
			"conf_prod":true,
			"unick":"search",
			"parsedtpl":"{config.sel}",
			"configtpl":{
				"root":"{crumb.parent}",
				"sel":"{config.sel|crumb.name}"
			}
		},
		"producers":{
			"tpl":"*catalog/producers.tpl",
			"json":"*catalog/producers.php",
			"autoedit":{ "fast":"*Тексты/Производители"}
		},
		"stat":{
			"tpl":"*catalog/catalog.tpl",
			"tplroot":"stat",
			"json":"*catalog/catalog.php?type=stat",
			"autoedit":{ "fast":"*Тексты/Статистика поиска по каталогу"},
			"seotpl":{
				"link":"{crumb}",
				"json":"{json}"
			}
		}
	}
}